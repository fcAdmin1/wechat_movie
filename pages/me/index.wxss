.container {
  min-height: 100vh;
  background: #EDEDED;
}

.avatar {
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  /* margin-top: 160rpx; */
  border: 4rpx solid #0491FF;
  border-radius: 100%;
  overflow: hidden;
}

.motto {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100vh;
  text-align: center;
}

.head {
  background: white;
  padding: 30rpx 0px;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  flex-direction: row;
}

.list {
  margin-top: 20rpx;
}
.list .item {
  background: white;
  height: 48px;
}
.list .item image {
  width: 15rpx;
  height: 28rpx;
}
.list .item .cc {
  height: 100%;
  display: flex;  
  justify-content: space-between;
  align-items: center;
}
.list .item .cc text{
  font-size: 28rpx;
}