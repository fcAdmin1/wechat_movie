.movie-container {
  width: 100%;
}
.pannel {
  margin-top: 20rpx;
}
.pannel .head {
  font-size: 36rpx;
  font-weight: 800;
}
.pannel .more {
  display: flex;
  align-items: center;
}
.pannel .more text{
  font-size: 30rpx;
  font-weight: 600;
}
.pannel .more image {
  width: 26rpx;
  height: 26rpx;
}
.pannel .title {
  display: flex;
  justify-content: space-between;
}
.movie-list .item {
  margin-top: 20rpx;
  float: left;
  width: 30%;
  margin-left: 2.5%;
}
.movie-list .item image {
  width: 100%;
  height: 300rpx;
}
.movie-list .item .title {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.movie-img {
  width: 100%;
  height: 300rpx;
}

.movie-title{
  margin-bottom: 16rpx;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}