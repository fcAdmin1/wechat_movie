page {
  background: white;
}
.container {
  display: flex;
  flex-direction: column;
  background: white;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.hide{
  opacity: 0;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 24rpx;
  font-weight: 300;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin: 0 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.video {
  margin-top: 20rpx;
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
}
.user-info .text {
  margin-left: 20rpx;
}
.user-info .text text {
  display: block;
}
.user-info .text .desc {
  font-size: 24rpx;
  color: #6F6F6F;
}

.author-date {
  display: flex;
  justify-content: space-between;
}
.control image {
  margin-right: 20rpx;
  width: 24rpx;
  height: 24rpx;
}

.share::after {
  border:none;
}
.share {
  outline:none;
  border:none;
  list-style: none;
  background: none;
  display: inline-block;
  height: 13px;
  width: 13px;
  padding: 0px;
  margin: 0px;
  overflow: visible;
  margin-right: 20rpx;
  /* position: static; */
}