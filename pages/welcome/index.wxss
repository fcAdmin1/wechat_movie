.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border: 8rpx solid white;
  border-radius: 100%;
  overflow: hidden;
}

.motto {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.journey-container {
  margin-top: 500rpx;
  width: 250rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  font-size: 26rpx;
}

.journey {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #fff;
}

page {
  height: 100%;
  background-color: #b3d4db;
}

.back {
  position: absolute;
  z-index: -1;
  left: 0px;
  top: 0px;
  width: 100vw;
  height: 100vh;
}
